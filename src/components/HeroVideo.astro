---
import Button from "./Button.astro";
import { Image } from "astro:assets";
import mobileImage from "../assets/images/mobil_img.png";
---

<div class="heroVideo relative w-full h-screen overflow-hidden">
  <span class="hidden md:block">
    <video
      autoplay
      muted
      loop
      class="absolute top-0 left-0 w-full h-full object-cover"
    >
      <source
        src="https://saaa.dk/kea/15_eksamen/purrfectbox_hero.webm"
        type="video/webm"
      />
    </video>
  </span>
  <span class="md:hidden flex">
    <Image class="" src={mobileImage} alt="mobil" />
  </span>
  <div
    class="absolute inset-0 bottom-40 flex items-center justify-center lg:bottom-20"
  >
    <h1
      class="font-bold flex absolute items-center justify-center inset-0 bottom-72 lg:bottom-60"
    >
      Purrfect Box
    </h1>
    <div
      class="absolute pulsate-fwd inset-0 bottom-40 flex items-center justify-center lg:bottom-24"
    >
      <span class="pulsate-fwd hidden md:block">
        <a href="/productlist">
          <Button class="" variant="primary" size="desktop"
            ><input type="submit" value="Bestil PurrBox abonnement" /></Button
          ></a
        >
      </span>
      <span class="pulsate-fwd md:hidden flex"
        ><a href="/productlist">
          <Button class="" variant="primary" size="mobile"
            ><input type="submit" value="Bestil PurrBox abonnement" /></Button
          ></a
        >
      </span>
    </div>
  </div>
</div>

<style>
  .pulsate-fwd {
    -webkit-animation: pulsate-fwd 2.5s ease-in-out infinite both;
    animation: pulsate-fwd 2.5s ease-in-out infinite both;
  }
